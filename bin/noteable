#!/usr/bin/env ruby

require_relative '../lib/noteable'

$pattern = /(.*)(##note##)(.+)(##note##.*)/

ARGV.length == 0 ? NoteAble.find_all_and_print : NoteAble.send('open', ARGV.join)

def execute_commands(command)
  case command[0]
  when /\d/

  when '-h' || '--help'
    View.help
  when '-v' || '--version'
    View.version
  when '-s' || '--setting'
    View.setting
  when '-t' || '--tag'
    # reset_tag(command[1])
    $pattern = /(.*)("#{command[1]}")(.+)("#{command[1]}".*)/
end